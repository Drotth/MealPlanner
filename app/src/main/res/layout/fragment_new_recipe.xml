<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.da401a.mealplanner.NewRecipeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/editTextNewRecName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_rec_name"
            android:inputType="textCapSentences"
            android:layout_margin="5dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/editTextNewRecDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_rec_desc"
            android:inputType="textCapSentences|textMultiLine"
            android:singleLine="false"
            android:layout_margin="5dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/editTextNewRecMeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_rec_meat"
            android:inputType="textCapSentences"
            android:layout_margin="5dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/editTextNewRecAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_rec_acc"
            android:inputType="textCapSentences"
            android:layout_margin="5dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/editTextNewRecVeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_rec_veg"
            android:inputType="textCapSentences"
            android:layout_margin="5dp"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/editTextNewRecDrink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/new_rec_drink"
            android:inputType="textCapSentences"
            android:layout_margin="5dp"
            android:padding="10dp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/buttonNewRecipeInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:text="@string/done" />

    </LinearLayout>

</ScrollView>

